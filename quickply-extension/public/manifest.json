{
  "manifest_version": 3,
  "name": "JobFill Extension",
  "version": "1.0.0",
  "description": "Automatically fill job application forms",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["auth.html"],
      "matches": ["<all_urls>"]
    }
  ]
}

